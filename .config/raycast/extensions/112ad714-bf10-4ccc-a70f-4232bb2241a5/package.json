  "tools": [
    {
      "name": "create-reminder",
      "title": "Create Reminder",
      "description": "Create a new reminder in Apple Reminders.",
      "input": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the reminder."
          },
          "notes": {
            "type": "string",
            "description": "The notes for the reminder."
          },
          "dueDate": {
            "type": "string",
            "description": "The due date. Must include a calendar date. Use YYYY-MM-DD for full-day reminders or ISO with time (YYYY-MM-DDTHH:mm:ss.sssZ). Time-only values (e.g. \"10:00:00\") are invalid and will fail. Use sensible defaults for common timeframes (e.g \"8am\" for \"morning\", \"1pm\" for \"afternoon\", \"6pm\" for \"evening\"). A number with \"a\" or \"p\" appended (e.g. \"1p\" or \"8a\") should be treated as AM or PM. If the user didn't include a specific time, assume it's a full day reminder."
          },
          "priority": {
            "type": "string",
            "description": "The priority level. Only pick the value from this list: \"low\", \"medium\", \"high\". Use the \"high\" priority if the task text specifies a word such as \"urgent\", \"important\", or an exclamation mark."
          },
          "listId": {
            "type": "string",
            "description": "The list ID to add the reminder to. Note that the user can prepend the \"#\" or \"@\" symbols to list names, for example, \"#work\" or \"@work\"."
          },
          "address": {
            "type": "string",
            "description": "The address for location-based reminders."
          },
          "proximity": {
            "type": "string",
            "description": "The proximity trigger type. Only pick the value from this list: \"enter\", \"leave\".",
            "enum": [
              "enter",
              "leave"
            ]
          },
          "radius": {
            "type": "number",
            "description": "The radius around the location in meters."
          },
          "recurrence": {
            "type": "object",
            "properties": {
              "frequency": {
                "type": "string",
                "description": "Recurrence frequency. Only pick the value from this list: \"daily\", \"weekly\", \"monthly\", \"yearly\".",
                "enum": [
                  "daily",
                  "weekdays",
                  "weekends",
                  "weekly",
                  "monthly",
                  "yearly"
                ]
              },
              "interval": {
                "type": "number",
                "description": "Recurrence interval. An integer greater than 0 that specifies how often a pattern repeats. If a recurrence frequency is \"weekly\" rule and the interval is 1, then the pattern repeats every week. If a recurrence frequency is \"monthly\" rule and the interval is 3, then the pattern repeats every 3 months."
              },
              "endDate": {
                "type": "string",
                "description": "Recurrence end date. A full day date (YYYY-MM-DD). If no end date is specified, the recurrence will repeat forever."
              }
            },
            "required": [
              "frequency",
              "interval"
            ],
            "description": "The recurrence settings."
          }
        },
        "required": [
          "title"
        ]
      },
      "confirmation": false
    },
    {
      "name": "get-lists",
      "title": "Get Lists",
      "description": "Get all Apple Reminders lists.",
      "confirmation": false
    },
    {
      "name": "get-reminders",
      "title": "Get Reminders",
      "description": "Get all reminders from Apple Reminders.",
      "confirmation": false
    },
    {
      "name": "update-reminder",
      "title": "Update Reminder",
      "description": "Update an existing reminder in Apple Reminders.",
      "input": {
        "type": "object",
        "properties": {
          "reminderId": {
            "type": "string",
            "description": "The ID of the reminder to update."
          },
          "title": {
            "type": "string",
            "description": "The new title of the reminder."
          },
          "notes": {
            "type": "string",
            "description": "The new notes for the reminder."
          },
          "dueDate": {
            "type": "string",
            "description": "The new due date. Can either be a full day date (YYYY-MM-DD) or an ISO date if the time is specified (YYYY-MM-DDTHH:mm:ss.sssZ)."
          },
          "priority": {
            "type": "string",
            "description": "The new priority of the reminder.",
            "enum": [
              "high",
              "medium",
              "low"
            ]
          },
          "isCompleted": {
            "type": "boolean",
            "description": "Whether the reminder is completed."
          },
          "recurrence": {
            "type": "object",
            "properties": {
              "frequency": {
                "type": "string",
                "description": "Recurrence frequency. Only pick the value from this list: \"daily\", \"weekly\", \"monthly\", \"yearly\".",
                "enum": [
                  "daily",
                  "weekdays",
                  "weekends",
                  "weekly",
                  "monthly",
                  "yearly"
                ]
              },
              "interval": {
                "type": "number",
                "description": "Recurrence interval. An integer greater than 0 that specifies how often a pattern repeats. If a recurrence frequency is \"weekly\" rule and the interval is 1, then the pattern repeats every week. If a recurrence frequency is \"monthly\" rule and the interval is 3, then the pattern repeats every 3 months."
              },
              "endDate": {
                "type": "string",
                "description": "Recurrence end date. A full day date (YYYY-MM-DD). If no end date is specified, the recurrence will repeat forever."
              }
            },
            "required": [
              "frequency",
              "interval"
            ],
            "description": "The recurrence settings."
          }
        },
        "required": [
          "reminderId"
        ]
      },
      "confirmation": false
    },
    {
      "name": "delete-reminder",
      "title": "Delete Reminder",
      "description": "Delete a reminder from Apple Reminders.",
      "input": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The ID of the reminder to delete"
          },
          "confirmation": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "notes": {
                "type": "string"
              },
              "list": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "color": {
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "title",
                  "color"
                ]
              },
              "dueDate": {
                "type": "string"
              },
              "priority": {
                "type": "string",
                "enum": [
                  "high",
                  "medium",
                  "low"
                ]
              },
              "isRecurring": {
                "type": "string"
              },
              "recurrenceRule": {
                "type": "string"
              }
            },
            "required": [
              "title"
            ],
            "description": "The reminder properties to display to the user"
          }
        },
        "required": [
          "id",
          "confirmation"
        ]
      },
      "confirmation": true
    },
